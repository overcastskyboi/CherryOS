    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{js,jsx} --report-unused-disable-directives",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
