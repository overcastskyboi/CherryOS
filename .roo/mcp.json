{
	"mcpServers": {
		"sequentialthinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"alwaysAllow": [
				"sequentialthinking"
			]
		},
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"S:/CherryOS/CherryOS-dev"
			],
			"alwaysAllow": [
				"read_file",
				"read_text_file",
				"read_media_file",
				"read_multiple_files",
				"write_file",
				"edit_file",
				"create_directory",
				"list_directory",
				"list_directory_with_sizes",
				"directory_tree",
				"move_file",
				"search_files",
				"get_file_info",
				"list_allowed_directories"
			]
		},
		"playwright": {
			"command": "npx",
			"args": [
				"-y",
				"@playwright/mcp@0.0.38"
			],
			"alwaysAllow": [
				"browser_close",
				"browser_resize",
				"browser_console_messages",
				"browser_evaluate",
				"browser_handle_dialog",
				"browser_file_upload",
				"browser_fill_form",
				"browser_install",
				"browser_press_key",
				"browser_type",
				"browser_navigate",
				"browser_navigate_back",
				"browser_network_requests",
				"browser_take_screenshot",
				"browser_snapshot",
				"browser_click",
				"browser_drag",
				"browser_hover",
				"browser_select_option",
				"browser_tabs",
				"browser_wait_for"
			]
		},
		"puppeteer": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-puppeteer"
			]
		}
	}
}